{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div align="center" style="background-color: #5eb5e0; box-shadow: 20px 20px 50px 10px red inset">
<div style="background-color: #ffcc00; width: 800px; height: 30px;box-shadow: 2px 2px 2px 2px darkviolet inset; border-radius: 4px;">
    <a style="color: #0000F0;" href={{ path('advert_index') }}><b>MyTable</b></a>
</div>

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <label for="username">Login</label>
    <input type="text" id="username" placeholder="Twój login do MyTable" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />

    <label for="password">Hasło</label>
    <input type="password" id="password" placeholder="Hasło" name="_password" required="required" autocomplete="current-password" />

    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">Zapamiętaj mnie</label>
    <input style="font-weight:bold;background-color: #0000F0; color: white;border-color:purple; border-radius: 4px" type="submit" id="_submit" name="_submit" value="Zaloguj się"/>
</form>
    <a href="{{ path("fos_user_registration_register") }}"><button style="background-color: #0000F0; color: white;border-color:purple; border-radius: 4px"><b>Jeszcze nie mam konta</b></button></a>
</div>
